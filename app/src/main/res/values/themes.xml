<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Classmate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">#F44336</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowBackground">@color/light_gray</item>-->
        <!-- Customize your theme here. -->
        <item name="android:timePickerStyle">@style/SpinnerTimePicker</item>
    </style>
    <style name="Theme.Classmate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Classmate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Classmate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerTimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>
</resources>