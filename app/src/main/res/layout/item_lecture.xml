<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/lectureName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/lectureTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="안드로이드 앱 개발" />

    <TextView
        android:id="@+id/lectureTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/lecturePlace"
        app:layout_constraintStart_toStartOf="@+id/lectureName"
        app:layout_constraintTop_toBottomOf="@+id/lectureName"
        tools:text="월,수,금 9:30 - 12:20" />

    <TextView
        android:id="@+id/lecturePlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/lectureTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lectureTime"
        app:layout_constraintTop_toTopOf="@+id/lectureTime"
        tools:text="ICT융합대학" />

    <TextView
        android:id="@+id/professor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lectureTime"
        app:layout_constraintTop_toBottomOf="@+id/lecturePlace"
        tools:text="박명범" />

</androidx.constraintlayout.widget.ConstraintLayout>